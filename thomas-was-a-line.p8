function _init()
x = 8
y = 64
level = 0

end

function _update()
  if btn(0) then x=x-8 end
  if btn(1) then x=x+8 end
--  if btn(2) then y=y-8 end
--  if btn(3) then y=y+8 end
  if (x<8) then x=8 end
  if (x>120) then 
    x=8
    level+=1
  end
  if (y<8) then y=8 end
  if (y>120) then y=120 end
end

function _draw()
  cls(2)
  map(level*127,0,0,0)
  for l=1,14 do
    spr(1,l*8,64)
  end
  spr(17, 120,64)
  print("")
  print("")
  print("")
  for i=1,17 do
    print(
      sub("thomas was a line",
      i,i))
  end
  spr(4,x,y)
end

